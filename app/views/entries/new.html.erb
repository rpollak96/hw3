<h1>New Entry for <%= @place.name %></h1>

<form action="/entries" method="post">
  <input type="hidden" name="entry[place_id]" value="<%= @place.id %>">

  <label for="title">Title</label>
  <input type="text" id="title" name="entry[title]">

  <label for="occurred_on">Date I travelled there</label>
  <input type="date" id="occurred_on" name="entry[occurred_on]">

  <label for="description">Who I travelled with</label>
  <textarea id="description" name="entry[description]"></textarea>

  <button>Create Entry</button>
</form>

<p>
  <a href="/places/<%= @place.id %>">Back to <%= @place.name %></a>
</p>
